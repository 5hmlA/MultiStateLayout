<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    app:cornerRadius="30dp"
    tools:context=".ShapeTestActivity">

    <jonas.jlayout.JConstraintLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:foreground="?selectableItemBackground"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/selector_test"
        android:layout_width="0dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        app:cornerRadius="60dp"
        android:layout_margin="40dp"
        android:layout_height="180dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:text="测试"
            android:textSize="20dp"
            android:background="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

    </jonas.jlayout.JConstraintLayout>

    <jonas.jlayout.JConstraintLayout
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:background="#f40c0c"
        android:elevation="6dp"
        android:translationZ="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cornerRadius="60dp">

        <ImageView
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/zly5"
            android:alpha="0.3"
            android:scaleType="centerCrop"
            android:layout_height="90dp"/>

        <TextView
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#ffff"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="akdjfadkj"
            android:layout_height="20dp"/>

    </jonas.jlayout.JConstraintLayout>

    <jonas.jlayout.JConstraintLayout21
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:translationZ="8dp"
        android:background="@drawable/selector_test"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cornerRadius="60dp">

        <ImageView
            android:layout_width="50dp"
            android:alpha="0.2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/zly5"
            android:scaleType="centerCrop"
            android:layout_height="90dp"/>

        <TextView
            android:layout_width="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#ffff"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="akdjfadkj"
            android:layout_height="50dp"/>

    </jonas.jlayout.JConstraintLayout21>
</androidx.constraintlayout.widget.ConstraintLayout>